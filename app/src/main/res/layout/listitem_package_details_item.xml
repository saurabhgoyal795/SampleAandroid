<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:elevation="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    card_view:cardBackgroundColor="@color/grey_d"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_height="match_parent"
        android:background="@drawable/list_selector_transparent_5_black">
        <TextView
            android:id="@+id/examName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2B3E50"
            android:text="CLASS ROOM TEST SERIES - 2020"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/ca_blue"
                android:textSize="12sp"
                android:alpha=".70"
                android:visibility="visible"
                android:text="50 questions"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/ca_blue"
                android:alpha=".70"
                android:textSize="12sp"
                android:visibility="gone"
                android:text="50 marks"/>
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/ca_blue"
                android:alpha=".70"
                android:textSize="12sp"
                android:visibility="visible"
                android:text="20 minute"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/startTest"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:text="Start Test"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:background="@drawable/button_green_rounded_4dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/lockButton"
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:background="@drawable/button_blue_rounded"
                    android:visibility="visible"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_lock" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Locked"
                        android:textAllCaps="true"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <com.zonetech.online.views.CAFlowLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:visibility="gone"
            android:orientation="vertical">
        </com.zonetech.online.views.CAFlowLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/offlineLayout"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_round"
                    android:foreground="@drawable/list_selector_transparent_5_black"
                    android:text="Download Copy"
                    android:textSize="12sp"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_round"
                    android:foreground="@drawable/list_selector_transparent_5_black"
                    android:text="Download Paper"
                    android:textSize="12sp"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_round"
                    android:foreground="@drawable/list_selector_transparent_5_black"
                    android:text="Download Solution"
                    android:textSize="12sp"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_round"
                    android:foreground="@drawable/list_selector_transparent_5_black"
                    android:text="Download Result"
                    android:textSize="12sp"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_round"
                    android:foreground="@drawable/list_selector_transparent_5_black"
                    android:text="Download Checked"
                    android:textSize="12sp"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_round"
                    android:foreground="@drawable/list_selector_transparent_5_black"
                    android:text="Upload Copy"
                    android:textSize="12sp"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_round"
                    android:foreground="@drawable/list_selector_transparent_5_black"
                    android:text="View Copy"
                    android:textSize="12sp"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>